{
  "name": "xschedule-homeassistant",
  "version": "0.1.0",
  "description": "Home Assistant integration and custom card for xSchedule lighting sequencer",
  "main": "dist/xschedule-card.js",
  "scripts": {
    "build": "rollup -c && npm run copy-to-www",
    "copy-to-www": "mkdir -p custom_components/xschedule/www && cp dist/*.js custom_components/xschedule/www/",
    "watch": "rollup -c -w",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.js",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mr-light-show/xschedule-homeassistant.git"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hacs",
    "xschedule",
    "xlights",
    "lighting",
    "media-player",
    "custom-card"
  ],
  "author": "mr-light-show",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mr-light-show/xschedule-homeassistant/issues"
  },
  "homepage": "https://github.com/mr-light-show/xschedule-homeassistant#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "rollup": "^4.1.4",
    "sinon": "^17.0.0"
  },
  "dependencies": {
    "lit": "^3.0.0"
  }
}
