{
  "name": "@mr-light-show/xschedule-cards",
  "version": "1.7.1",
  "description": "Lovelace cards for xSchedule Home Assistant integration",
  "main": "dist/xschedule-card.js",
  "scripts": {
    "build": "rollup -c && npm run copy-to-www",
    "copy-to-www": "mkdir -p ../custom_components/xschedule/www && cp dist/*.js ../custom_components/xschedule/www/",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --watch"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "rollup": "^4.9.4",
    "sinon": "^17.0.1"
  }
}

